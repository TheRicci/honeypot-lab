  filebeat:
    image: docker.elastic.co/beats/filebeat-oss:8.8.2
    container_name: filebeat
    user: root
    networks:
      - siemnet     
    depends_on:
      - modsec-proxy
      - suricata
      - wazuh.indexer
    volumes:
      # Filebeat config
      - ./filebeat/filebeat.yml:/usr/share/filebeat/filebeat.yml:ro
      # Log volumes from ModSecurity & Suricata
      - ./logs/modsec:/var/log/modsec:ro
      - ./logs/suricata:/var/log/suricata:ro
      # Persisted Filebeat state (registry, etc.)
      #- filebeat_etc:/usr/share/filebeat/data
      # TLS certs for Wazuh Indexer (same as Managerâ†’Indexer)
      - ./config/wazuh_indexer_ssl_certs/root-ca.pem:/etc/ssl/root-ca.pem:ro
      - ./config/wazuh_indexer_ssl_certs/wazuh.indexer.pem:/etc/ssl/cert.pem:ro
      - ./config/wazuh_indexer_ssl_certs/wazuh.indexer-key.pem:/etc/ssl/key.pem:ro
    entrypoint: ["/usr/local/bin/docker-entrypoint"] 
    command: ["filebeat", "-e", "-strict.perms=false"]
